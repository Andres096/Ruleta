{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>CREAR JUGADOR</h1>

        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.identificacion)}}
                    {{ form_widget(form.identificacion,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.nombre)}}
                    {{ form_widget(form.nombre, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.apellido)}}
                    {{ form_widget(form.apellido, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.dinero)}}
                    {{ form_widget(form.dinero, {'attr':{'class':'form-control', 'disapled':'disapled', 'value':'10000'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.alias)}}
                    {{ form_widget(form.alias, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password)}}
                    {{ form_widget(form.password, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-group-lg btn-success"  type="submit"> Crear</button>
                    <button class="btn btn-info text-center" ><a href="{{ path('jugador_index') }}" >Lista</a></button>
                </div>
                {{ form_end(form) }}

                {#                <ul class="form-group text-center">#}
                {#                    <li class="form-inline">#}
                {#                    </li>#}
                {#                </ul>#}
            </div>
        </div>
    </div>
{% endblock %}
